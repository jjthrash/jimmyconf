#!/bin/bash

BASE=/Volumes/Nomadic\ Backup
BACKUP="nice rsync -av --delete"

if [ -d "$BASE" ]; then

    $BACKUP $HOME/Archive                \
            $HOME/Documents              \
            $HOME/Library/Containers     \
            $HOME/Code                   \
            --exclude '**'/Code/general \
              "$BASE"/Backup

    echo Last backup: `date` > "$BASE"/LAST_BACKUP

fi
