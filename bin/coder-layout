#!/bin/bash

if [ $# != 2 ]; then
  echo specify left right count
  exit 1
fi

if [ $1 = 0 -a $2 = 3 ]; then
  tmux select-layout "bc6b,144x91,0,0[144x24,0,0,10,144x23,0,25,12,144x42,0,49,90]"
fi

if [ $1 = 1 -a $2 = 1 ]; then
  tmux select-layout "cc3d,238x63,0,0{140x63,0,0,0,97x63,141,0,227}"
fi

if [ $1 = 1 -a $2 = 2 ]; then
  tmux select-layout "b922,238x63,0,0{140x63,0,0,0,97x63,141,0[97x31,141,0,227,97x31,141,32,228]}"
fi

if [ $1 = 1 -a $2 = 3 ]; then
  tmux select-layout "5c72,286x80,0,0{164x80,0,0,978,121x80,165,0[121x20,165,0,869,121x19,165,21,13,121x39,165,41,955]}"
fi

if [ $1 = 1 -a $2 =  4 ]; then
  tmux select-layout "be6e,364x94,0,0{203x94,0,0,44,160x94,204,0[160x23,204,0,45,160x23,204,24,48,160x23,204,48,46,160x22,204,72,47]}"
fi

if [ $1 = 2 -a $2 = 1 ]; then
  tmux select-layout "a0bb,238x63,0,0{140x63,0,0[140x31,0,0,0,140x31,0,32,229],97x63,141,0,227}"
fi

if [ $1 = 2 -a $2 = 2 ]; then
  tmux select-layout "eb11,238x63,0,0{140x63,0,0[140x31,0,0,0,140x31,0,32,232],97x63,141,0[97x31,141,0,227,97x31,141,32,231]}"
fi

if [ $1 = 3 -a $2 = 2 ]; then
  tmux select-layout "3c8e,425x101,0,0{234x101,0,0[234x50,0,0{117x50,0,0,2,116x50,118,0,34},234x50,0,51,23],190x101,235,0[190x50,235,0,7,190x50,235,51,21]}"
fi

if [ $1 = 4 -a $2 = 1 ]; then
  tmux select-layout "4ec8,286x73,0,0{174x73,0,0[174x36,0,0{87x36,0,0,0,86x36,88,0,301},174x36,0,37{87x36,0,37,39,86x36,88,37,302}],111x73,175,0,6}"
fi

if [ $1 = 4 -a $2 = 2 ]; then
  tmux select-layout "a1d3,286x73,0,0{178x73,0,0[178x38,0,0{86x38,0,0,2,91x38,87,0,20},178x34,0,39{86x34,0,39,18,91x34,87,39,23}],107x73,179,0[107x38,179,0,27,107x34,179,39,38]}"
fi

if [ $1 = 4 -a $2 = 3 ]; then
  tmux select-layout "803a,286x73,0,0{178x73,0,0[178x38,0,0{86x38,0,0,2,91x38,87,0,20},178x34,0,39{86x34,0,39,18,91x34,87,39,23}],107x73,179,0[107x21,179,0,7,107x27,179,22,27,107x23,179,50,38]}"
fi
